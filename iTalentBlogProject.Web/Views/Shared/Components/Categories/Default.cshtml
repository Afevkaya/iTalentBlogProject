@model List<CategoryViewModel>


<nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
    <div class="position-sticky">
        <div class="list-group list-group-flush mx-3 mt-4">
            @foreach (var item in Model)
            {
                <a asp-action="PostByCategoryId" asp-controller="Posts" class="list-group-item list-group-item-action py-2 ripple" asp-route-categoryId="@item.Id" asp-route-page="1"><i class="fa fa-arrow-circle-right"></i><span> @item.Name</span></a>
            }
        </div>
    </div>
</nav>