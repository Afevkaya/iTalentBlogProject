@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<iTalentBlogProject.Web.Models.PostViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<a class="btn btn-primary mt-2" asp-area="AdminPanel" asp-action="Create" asp-controller="Posts">Post Ekle</a>

<div class="datatable">
    <table class="table">
        <thead>
            <tr>
                <th class="th-sm">Photo</th>
                <th class="th-sm">Id</th>
                <th class="th-sm">Title</th>
                <th class="th-sm">Article</th>
                <th class="th-sm">Category Name</th>
                <th class="th-sm">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>~/images/@item.PhotoUrl</td>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Article</td>
                    <td>@item.CategoryId</td>
                    <td>
                        <div class="float-end">
                            <a class="btn btn-warning btn-sm" asp-area="AdminPanel" asp-action="Delete" asp-controller="Posts" asp-route-id="@item.Id">Sil</a>
                        </div>
                        <div class="float-end">
                            <a class="btn btn-primary btn-sm mt-1" asp-area="AdminPanel" asp-action="Update" asp-controller="Posts" asp-route-id="@item.Id">Güncelle</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

